{% schema %}
{
  "name": "Product Bundle Collection",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "selected_collection",
      "label": "Select Collection"
    },
    {
      "type": "text",
      "id": "custom_title",
      "label": "Custom Title",
      "default": "Our Featured Products"
    },
    {
      "type": "textarea",
      "id": "custom_text",
      "label": "Custom Text",
      "default": "Explore our hand-picked selection of products."
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" }
      ],
      "default": "h2"
    },
    {
      "type": "checkbox",
      "id": "title_bold",
      "label": "Make Title Bold",
      "default": true
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title Font Size",
      "min": 14,
      "max": 48,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "select",
      "id": "title_align",
      "label": "Title Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    }
  ],
  "presets": [
    {
      "name": "Product Bundle Collection",
      "category": "Product"
    }
  ]
}
{% endschema %}

<style>
  .bundle-section {
    padding: 2rem;
    background: rgba(255, 255, 255, 1);
  }

  .header-group {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
  }

  .title-wrapper {
    display: flex;
    flex-direction: column;
    text-align: {{ section.settings.title_align }};
  }

  .bundle-subtitle {
    margin-bottom: 0.5rem;
  }

  .bundle-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {% if section.settings.title_bold %}bold{% else %}normal{% endif %};
    margin: 0;
  }

  .list-wrapper {
    display: flex;
    align-items: center;
  }

  .custom-list {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: 40px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .custom-list li {
    font-weight: 500;
    white-space: nowrap;
  }

  .product-listing {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 0;
    justify-content: center;
  }

  .product-card {
    width: 365px;
    height: auto;
    background: rgba(246, 246, 245, 1);
    border-radius: 8px;
    list-style: none;
    margin: 1rem;
  }

  .product-image-wrapper {
    width: 365px;
    height: 365px;
  }

  .product-image-wrapper img {
    width: 300px;
    height: 300px;
    padding-top: 33px;
    padding-left: 33px;
    object-fit: contain;
  }

  .product-info {
    padding: 0 20px 20px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 6px;
  }

  .product-title {
    font-size: 16px;
    font-weight: bold;
    margin: 0;
  }

  .product-description,
  .product-tags {
    font-size: 14px;
    margin: 0;
  }

  .product-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 8px;
    width: 100%;
  }

  .product-stars {
    display: flex;
    gap: 2px;
    align-items: center;
  }

  .product-price-button {
    background-color: black;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
  }

  .product-price-button:hover {
    background-color: #333;
  }

  /* üîÅ RESPONSIVE STYLES */
  @media (max-width: 768px) {
    .list-wrapper {
      display: none;
    }

    .header-group {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .title-wrapper {
      align-items: center;
      text-align: center !important;
    }

    .bundle-title,
    .bundle-subtitle {
      text-align: center;
    }
  }
</style>

<div class="bundle-section">
  <!-- Agrupaci√≥n de subt√≠tulo + t√≠tulo + lista -->
  <div class="header-group">
    <div class="title-wrapper">
      <p class="bundle-subtitle">{{ section.settings.custom_text }}</p>
      <{{ section.settings.title_tag }} class="bundle-title">
        {{ section.settings.custom_title }}
      </{{ section.settings.title_tag }}>
    </div>

    <div class="list-wrapper">
      <ul class="custom-list">
        <li>Sleep</li>
        <li>Cognitive Function</li>
        <li>Foundational Health</li>
        <li>Athletic Performance</li>
        <li>Hormone Support</li>
      </ul>
    </div>
  </div>

  <!-- Renderizado de la colecci√≥n -->
  <div>
    {% if section.settings.selected_collection %}
      {% assign collection = collections[section.settings.selected_collection] %}
      {% if collection and collection.products.size > 0 %}
        <ol class="product-listing">
          {% for product in collection.products %}
            <li class="product-card">
              <div class="product-image-wrapper">
                <img src="{{ product.featured_image | img_url: 'medium' }}" width="" height="" alt="{{ product.title }}">
              </div>
              <div class="product-info">
                <h4 class="product-title">{{ product.title }}</h4>
                <p class="product-description">{{ product.description | truncatewords: 20 }}</p>
                <p class="product-tags">{{ product.tags }}</p>

                <div class="product-footer">
                  <div class="product-stars">
                    {% for i in (1..5) %}
                      <img src="{{ 'Black_Star.svg' | asset_url }}" width="16" height="16" alt="star">
                    {% endfor %}
                  </div>

                  <form method="post" action="/cart/add">
                    <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                    <button type="submit" class="product-price-button">
                      Add {{ product.price | money }}
                    </button>
                  </form>
                </div>
              </div>
            </li>
          {% endfor %}
        </ol>
      {% else %}
        <h3>Products from Selected Collection</h3>
        <p>No products found in this collection.</p>
      {% endif %}
    {% else %}
      <h3>Products from Selected Collection</h3>
      <p>Please select a collection in the theme settings.</p>
    {% endif %}
  </div>
</div>
