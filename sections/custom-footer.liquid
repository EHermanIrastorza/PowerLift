{% schema %}
{
  "name": "Footer Custom",
  "tag": "section",
  "class": "footer-custom",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f5f5f5"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Footer Custom"
    }
  ]
}
{% endschema %}

{% style %}
.footer-custom {
  background-color: {{ section.settings.background_color }};
  padding: 0;
}

.footer-main {
  width: 1600px;
  height: 364px;
  margin: 0 auto;
  display: flex;
  justify-content: space-evenly;
  align-items: flex-start;
  padding: 40px 0;
}

.footer-column {
  flex: 4;
  padding: 0 20px;
}

.footer-subscribe input[type="email"] {
  padding: 10px;
  width: 70%;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.footer-subscribe button {
  padding: 10px 20px;
  background-color: black;
  color: white;
  border: none;
  border-radius: 4px;
  margin-left: 10px;
  cursor: pointer;
}

.footer-links {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10px;
}

.footer-links ul {
  list-style: none;
  padding: 0;
}

.footer-links ul li {
  margin-bottom: 8px;
  font-size: 14px;
}

.footer-bottom {
  width: 1600px;
  height: 50px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  font-size: 14px;
  padding: 0 20px;
}
{% endstyle %}

<div class="footer-custom">
  <div class="footer-main">
    <!-- First Column -->
    <div class="footer-column">
      <h3>Subscribe to our newsletter</h3>
      <p>Stay updated on new products and offers.</p>
      <div class="footer-subscribe">
        <input type="email" placeholder="Email address" />
        <button type="submit">Subscribe</button>
      </div>
    </div>

    <!-- Second Column -->
    <div class="footer-column">
      <div class="footer-links">
        <ul>
          <li><strong>About Us</strong></li>
          <li>Our Story</li>
          <li>Team</li>
          <li>Careers</li>
        </ul>
        <ul>
          <li><strong>Support</strong></li>
          <li>Help Center</li>
          <li>Contact</li>
          <li>Shipping</li>
        </ul>
        <ul>
          <li><strong>Important Links</strong></li>
          <li>Blog</li>
          <li>Gift Cards</li>
          <li>Newsletter</li>
        </ul>
        <ul>
          <li><strong>Legal</strong></li>
          <li>Privacy Policy</li>
          <li>Terms of Use</li>
          <li>Accessibility</li>
        </ul>
      </div>
    </div>

    <!-- Third Column -->
    <div class="footer-column">
      <h3>Our Mission</h3>
      <p>To bring comfort and quality together.</p>
      <p>Eco-friendly materials</p>
      <p>Made with care</p>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <span>© uncmfrt.com. All rights reserved.</span>
    <span>Made with ❤ by Arctic Grey</span>
  </div>
</div>
