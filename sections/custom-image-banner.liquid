{% schema %}
{
  "name": "Custom Image Banner",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-center", "label": "Top Center" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "center-left", "label": "Center Left" },
        { "value": "center-center", "label": "Center Center" },
        { "value": "center-right", "label": "Center Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-center", "label": "Bottom Center" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ],
      "default": "center-center"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "select",
          "id": "heading_tag",
          "label": "Heading Tag",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" },
            { "value": "h4", "label": "H4" }
          ],
          "default": "h2"
        },
        {
          "type": "text",
          "id": "heading_text",
          "label": "Heading Text",
          "default": "Your Title Here"
        },
        {
          "type": "range",
          "id": "heading_font_size",
          "label": "Font Size (px)",
          "min": 12,
          "max": 72,
          "step": 1,
          "default": 24
        },
        {
          "type": "select",
          "id": "heading_style",
          "label": "Font Style",
          "options": [
            { "value": "normal", "label": "Regular" },
            { "value": "bold", "label": "Bold" },
            { "value": "italic", "label": "Italic" }
          ],
          "default": "normal"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "textarea",
          "id": "paragraph_text",
          "label": "Paragraph Text",
          "default": "Your description here."
        },
        {
          "type": "range",
          "id": "paragraph_font_size",
          "label": "Font Size (px)",
          "min": 12,
          "max": 48,
          "step": 1,
          "default": 16
        },
        {
          "type": "select",
          "id": "paragraph_style",
          "label": "Font Style",
          "options": [
            { "value": "normal", "label": "Regular" },
            { "value": "bold", "label": "Bold" },
            { "value": "italic", "label": "Italic" }
          ],
          "default": "normal"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons",
      "settings": [
        {
          "type": "text",
          "id": "button1_text",
          "label": "Button 1 Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button1_link",
          "label": "Button 1 Link"
        },
        {
          "type": "text",
          "id": "button2_text",
          "label": "Button 2 Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button2_link",
          "label": "Button 2 Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image Banner",
      "blocks": [
        { "type": "heading" },
        { "type": "paragraph" },
        { "type": "buttons" }
      ]
    }
  ]
}
{% endschema %}

<div class="custom-image-banner-wrapper" style="background: rgba(255, 255, 255, 1);">
  <div class="custom-image-banner">
    <div class="image-card">
      <div class="custom-image-container">
        {% if section.settings.banner_image %}
          <img
            src="{{ section.settings.banner_image | img_url: 'master' }}" width="" height=""
            alt="{{ section.settings.banner_alt_text }}"
            class="banner-image"
          >
        {% else %}
          <div class="no-image">No image selected</div>
        {% endif %}
        <div class="custom-banner-content content-position-{{ section.settings.content_position }} text-{{ section.settings.content_alignment }}">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'heading' %}
                <{{ block.settings.heading_tag }}
                  class="banner-heading"
                  style="
                    font-size: {{ block.settings.heading_font_size }}px;
                    font-style: {% if block.settings.heading_style == 'italic' %}italic{% else %}normal{% endif %};
                    font-weight: {% if block.settings.heading_style == 'bold' %}bold{% else %}normal{% endif %};
                  "
                >
                  {{ block.settings.heading_text }}
                </{{ block.settings.heading_tag }}>
              {% when 'paragraph' %}
                <p
                  class="banner-paragraph"
                  style="
                    font-size: {{ block.settings.paragraph_font_size }}px;
                    font-style: {% if block.settings.paragraph_style == 'italic' %}italic{% else %}normal{% endif %};
                    font-weight: {% if block.settings.paragraph_style == 'bold' %}bold{% else %}normal{% endif %};
                  "
                >
                  {{ block.settings.paragraph_text }}
                </p>
              {% when 'buttons' %}
                <div class="banner-buttons">
                  <a href="{{ block.settings.button1_link }}" class="btn">{{ block.settings.button1_text }}</a>
                  <a href="{{ block.settings.button2_link }}" class="btn">{{ block.settings.button2_text }}</a>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% style %}
.custom-image-banner-wrapper {
  display: flex;
  justify-content: center;
  background: rgba(255, 255, 255, 1);
  padding: 40px; /* Keep the padding for the overall section */
}

.custom-image-banner {
  position: relative;
  overflow: hidden;
  border-radius: 8px;
  width: 1520px; /* Maintain fixed width */
  height: 750px; /* Maintain fixed height */
  margin: 0 auto; /* Center the banner */
}

.image-card {
  /* margin: 40px; Remove margin from the card */
  width: 100%; /* Make the card take full width of the banner */
  height: 100%; /* Make the card take full height of the banner */
  position: relative; /* Needed for absolute positioning of content */
}

.custom-image-container {
  width: 100%;
  height: 100%;
  border-radius: 8px;
  overflow: hidden;
  position: relative; /* Needed for absolute positioning of content */
}

.custom-image-wrapper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.no-image {
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  border-radius: 8px;
}

.custom-banner-content {
  position: absolute; /* Position content over the image */
  color: white;
  z-index: 10; /* Ensure text is above the image */
}

/* Positioning options from settings */
.content-position-top-left { top: 10%; left: 10%; }
.content-position-top-center { top: 10%; left: 50%; transform: translateX(-50%); }
.content-position-top-right { top: 10%; right: 10%; }
.content-position-center-left { top: 50%; left: 10%; transform: translateY(-50%); }
.content-position-center-center { top: 50%; left: 50%; transform: translate(-50%, -50%); }
.content-position-center-right { top: 50%; right: 10%; transform: translateY(-50%); }
.content-position-bottom-left { bottom: 10%; left: 10%; }
.content-position-bottom-center { bottom: 10%; left: 50%; transform: translateX(-50%); }
.content-position-bottom-right { bottom: 10%; right: 10%; }

/* Text alignment classes */
.text-left { text-align: left; }
.text-center { text-align: center; }
.text-right { text-align: right; }

.btn {
  display: inline-block;
  padding: 10px 20px;
  margin: 5px;
  background-color: #007bff;
  color: white;
  text-decoration: none;
  border-radius: 5px;
}

.btn:hover {
  background-color: #0056b3;
}
{% endstyle %}