<section class="custom-navbar">
  <div class="navbar-container">

    <!-- Hamburger Menu -->
    <button class="hamburger-button" onclick="toggleMobileMenu()">
      â˜°
    </button>

    <!-- Logo -->
    <div class="navbar-logo">
      <a href="{{ shop.url }}">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url }}" width="" height="" alt="{{ shop.name }}" class="navbar-logo-img" />
        {% endif %}
      </a>
    </div>

    <!-- Search Icon & Bar -->
    <div class="navbar-search">
      <button class="search-toggle" onclick="toggleSearch()">
        {% render 'icon-magnify-glass' %}
      </button>
      <input type="text" id="search-bar" class="search-bar" placeholder="Search products..." oninput="searchProducts()">
      <ul id="search-results" class="search-results"></ul>
    </div>

    <!-- Navigation -->
    <nav class="navbar-navigation">
      <ul class="navbar-menu">
        {% for link in section.settings.navigation.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Sex Selector changer + quiz button -->
    <div class="navbar-sex-quiz">
      <!-- Sex Selector -->
      <div class="sex-selector" onclick="toggleSex()">
        <span id="sex-label" class="sex-label">Male</span>
        <img id="sex-icon" src="{{ 'man-asset.svg' | asset_url }}" width="" height="" alt="Sex icon" class="sex-icon" />
      </div>

      <!-- Quiz Button -->
      <div class="navbar-button">
        <a href="#" class="quiz-button">Take the Quiz</a>
      </div>
    </div>

    <!-- User + Cart Wrapper -->
    <div class="navbar-user-cart">
      <!-- User Button -->
      <div class="navbar-user">
        <button class="user-button">
          <img src="{{ 'User_custom.svg' | asset_url }}" alt="User" width="20" height="20" />
        </button>
      </div>

      <!-- Cart Button -->
      <div class="navbar-cart">
        <a href="{{ routes.cart_url }}" class="cart-button">
          <img src="{{ 'Cart_custom.svg' | asset_url }}" alt="Cart" width="20" height="20" />
          <span id="cart-count">0</span>
        </a>
      </div>
    </div>

  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu">
    <ul class="mobile-menu-links">
      {% for link in section.settings.navigation.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  </div>
</section>

<style>
  .custom-navbar {
    width: 100%;
    max-width: 1770px;
    height: 70px;
    position: absolute;
    top: 20px;
    left: 40px;
    background-color: white;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-left: 20px;
    padding-right: 40px;
    z-index: 100;
  }

  .navbar-container {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
  }

  .navbar-logo-img {
    max-height: 40px;
  }

  .navbar-menu {
    display: flex;
    gap: 20px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .navbar-menu li a {
    text-decoration: none;
    color: inherit;
    font-size: 16px;
  }

  .navbar-search {
    position: relative;
  }

  .search-toggle {
    background: none;
    border: none;
    cursor: pointer;
  }

  .search-bar {
    position: absolute;
    left: 0;
    top: 100%;
    width: 200px;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
    opacity: 0;
    transform: translateX(-20px);
    transition: all 0.3s ease;
    pointer-events: none;
    background: white;
    z-index: 10;
  }

  .search-bar.show {
    opacity: 1;
    transform: translateX(0);
    pointer-events: auto;
  }

  .search-results {
    position: absolute;
    background: white;
    list-style: none;
    padding: 0;
    margin: 5px 0 0;
    width: 200px;
    display: none;
    border: 1px solid #ccc;
    border-radius: 5px;
    z-index: 9;
  }

  .search-results li {
    padding: 5px;
    cursor: pointer;
  }

  .navbar-sex-quiz {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .sex-selector {
    width: 94px;
    height: 45px;
    padding: 10px 15px;
    background: rgba(228, 228, 228, 1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .sex-icon {
    width: 33px;
    height: 33px;
    margin-left: 10px;
  }

  .sex-label {
    color: black;
    font-weight: 500;
  }

  .navbar-button {
    margin-left: 20px;
  }

  .quiz-button {
    background-color: black;
    color: white;
    padding: 10px 20px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
  }

  .navbar-user-cart {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .user-button {
    background: transparent;
    display: flex;
    align-items: center;
    border: none;
    font-size: 20px;
    cursor: pointer;
  },
  .cart-button {
    background: transparent;
    border: none;
    cursor: pointer;
  }

  .cart-button {
    position: relative;
    text-decoration: none;
    display: flex;
    align-items: center;
  }

  #cart-count {
    display: none;
    background-color: red;
    color: white;
    font-size: 12px;
    border-radius: 50%;
    padding: 4px 7px;
    position: absolute;
    top: -5px;
    right: -10px;
  }

  .hamburger-button {
    display: none;
    font-size: 26px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .mobile-menu {
    display: none;
    background-color: white;
    padding: 20px;
  }

  .mobile-menu.show {
    display: block;
  }

  .mobile-menu-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mobile-menu-links li {
    margin-bottom: 10px;
  }

  .mobile-menu-links li a {
    text-decoration: none;
    font-weight: bold;
    color: black;
  }

  @media (max-width: 768px) {
    .navbar-logo,
    .search-toggle,
    .navbar-button,
    .sex-selector,
    .navbar-navigation {
      display: none !important;
    }

    .hamburger-button {
      display: block;
    }
  }
</style>

<script>
  function toggleSearch() {
    const searchBar = document.getElementById('search-bar');
    searchBar.classList.toggle('show');
  }

  function searchProducts() {
    let query = document.getElementById('search-bar').value.toLowerCase();
    let resultsContainer = document.getElementById('search-results');
    resultsContainer.innerHTML = '';
    
    fetch('/search/suggest.json?q=' + query + '&resources[type]=product')
      .then(response => response.json())
      .then(data => {
        let results = data.resources.results.products;
        if (results.length > 0) {
          resultsContainer.style.display = 'block';
          results.forEach(product => {
            let li = document.createElement('li');
            li.textContent = product.title;
            li.onclick = () => window.location.href = product.url;
            resultsContainer.appendChild(li);
          });
        } else {
          resultsContainer.style.display = 'none';
        }
      });
  }

  function toggleMobileMenu() {
    document.getElementById("mobile-menu").classList.toggle("show");
  }

  function toggleSex() {
    const icon = document.getElementById('sex-icon');
    const label = document.getElementById('sex-label');
    if (label.textContent === 'Male') {
      label.textContent = 'Female';
    } else {
      label.textContent = 'Male';
    }
  }

  document.addEventListener("DOMContentLoaded", function () {
    function updateCartCount() {
      fetch('/cart.js')
        .then(response => response.json())
        .then(data => {
          const cartCount = document.getElementById('cart-count');
          if (data.item_count > 0) {
            cartCount.innerText = data.item_count;
            cartCount.style.display = 'inline-block';
          } else {
            cartCount.style.display = 'none';
          }
        });
    }

    updateCartCount();
    document.addEventListener("cart:updated", updateCartCount);
  });
</script>

