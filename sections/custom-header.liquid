<section class="custom-navbar">
  <div class="navbar-container">
    <!-- Logo -->
    <div class="navbar-logo">
      <a href="{{ shop.url }}">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url }}" width="120" height="40" alt="{{ shop.name }}" class="navbar-logo-img" />
        {% endif %}
      </a>
    </div>
    
    <!-- Search Icon & Bar -->
    <div class="navbar-search">
      <button class="search-toggle" onclick="toggleSearch()">üîç</button>
      <input type="text" id="search-bar" class="search-bar" placeholder="Search products..." oninput="searchProducts()">
      <ul id="search-results" class="search-results"></ul>
    </div>
    
    <!-- Navigation -->
    <nav class="navbar-navigation">
      <ul class="navbar-menu">
        {% for link in section.settings.navigation.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Quiz Button -->
    <div class="navbar-button">
      <a href="#" class="quiz-button">Take the Quiz</a>
    </div>

    <!-- User Button -->
    <div class="navbar-user">
      <button class="user-button">üë§</button>
    </div>

    <!-- Cart Button -->
    <div class="navbar-cart">
      <a href="{{ routes.cart_url }}" class="cart-button">
        üõí <span id="cart-count">0</span>
      </a>
    </div>
  </div>
</section>

<style>
  .custom-navbar {
      width: 1570px;
      height: 70px;
      position: absolute;
      top: 20px;
      left: 40px;
      background-color: white;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
  }
  .navbar-container {
      display: flex;
      width: 100%;
      justify-content: space-between;
      align-items: center;
  }
  .navbar-menu {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      list-style: none;
      padding: 0;
      margin: 0;
      gap: 20px;
  }
  .navbar-menu li a {
      text-decoration: none;
      color: inherit;
      font-size: 16px;
  }
  .navbar-logo-img {
      width: auto;
      height: auto;
      max-height: none;
      max-width: none;
  }
  .navbar-search {
      position: relative;
  }
  .search-bar {
      display: none;
      width: 200px;
      padding: 5px;
      border: 1px solid #ccc;
      border-radius: 5px;
  }
  .search-results {
      position: absolute;
      background: white;
      list-style: none;
      padding: 0;
      margin: 5px 0 0;
      width: 100%;
      display: none;
      border: 1px solid #ccc;
      border-radius: 5px;
  }
  .search-results li {
      padding: 5px;
      cursor: pointer;
  }
  .navbar-button {
      margin-left: 20px;
  }
  .quiz-button {
      background-color: black;
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
  }
  .navbar-user {
      margin-left: 15px;
  }
  .user-button {
      background: transparent;
      border: none;
      font-size: 20px;
      cursor: pointer;
  }
  .navbar-cart {
      margin-left: 15px;
  }
  .cart-button {
      text-decoration: none;
      font-size: 20px;
      position: relative;
      display: flex;
      align-items: center;
  }
  #cart-count {
      background-color: red;
      color: white;
      font-size: 12px;
      border-radius: 50%;
      padding: 4px 7px;
      position: absolute;
      top: -5px;
      right: -10px;
  }
</style>

<script>
  function toggleSearch() {
      const searchBar = document.getElementById('search-bar');
      searchBar.style.display = searchBar.style.display === 'block' ? 'none' : 'block';
  }

  function searchProducts() {
      let query = document.getElementById('search-bar').value.toLowerCase();
      let resultsContainer = document.getElementById('search-results');
      resultsContainer.innerHTML = '';
      
      fetch('/search/suggest.json?q=' + query + '&resources[type]=product')
          .then(response => response.json())
          .then(data => {
              let results = data.resources.results.products;
              if (results.length > 0) {
                  resultsContainer.style.display = 'block';
                  results.forEach(product => {
                      let li = document.createElement('li');
                      li.textContent = product.title;
                      li.onclick = () => window.location.href = product.url;
                      resultsContainer.appendChild(li);
                  });
              } else {
                  resultsContainer.style.display = 'none';
              }
          });
  }
  document.addEventListener("DOMContentLoaded", function () {
    function updateCartCount() {
      fetch('/cart.js')
        .then(response => response.json())
        .then(data => {
          document.getElementById('cart-count').innerText = data.item_count;
        });
    }

    updateCartCount();
    document.addEventListener("cart:updated", updateCartCount);
  });
</script>

{% schema %}
{
  "name": "Custom Navbar",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "navigation",
      "label": "Navigation Menu"
    }
  ],
  "presets": [
    {
      "name": "Custom Navbar",
      "category": "Header"
    }
  ]
}
{% endschema %}
