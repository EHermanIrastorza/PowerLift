{
  "name": "Custom Navbar",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "navigation",
      "label": "Navigation Menu"
    }
  ],
  "presets": [
    {
      "name": "Custom Navbar",
      "category": "Header"
    }
  ]
}
{% endschema %}
