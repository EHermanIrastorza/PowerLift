{% schema %}
{
  "name": "Text Carousel Section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "label": "Text 1",
      "id": "text_1",
      "default": "First Recommendation"
    },
    {
      "type": "text",
      "label": "Text 2",
      "id": "text_2",
      "default": "Second Recommendation"
    },
    {
      "type": "text",
      "label": "Text 3",
      "id": "text_3",
      "default": "Third Recommendation"
    },
    {
      "type": "text",
      "label": "Text 4",
      "id": "text_4",
      "default": "Fourth Recommendation"
    }
  ],
  "presets": [
    {
      "name": "text carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="text-carousel-section">
  <div class="carousel-wrapper">
    <div class="text-carousel">
      {% for i in (1..3) %}
        <span class="carousel-item">{{ section.settings.text_1 }}</span>
        <img src="{{ 'Star_text_carrousel.svg' | asset_url }}" width="" height="" alt="Star" class="separator-image">
        <span class="carousel-item">{{ section.settings.text_2 }}</span>
        <img src="{{ 'Star_text_carrousel.svg' | asset_url }}" width="" height="" alt="Star" class="separator-image">
        <span class="carousel-item">{{ section.settings.text_3 }}</span>
        <img src="{{ 'Star_text_carrousel.svg' | asset_url }}" width="" height="" alt="Star" class="separator-image">
        <span class="carousel-item">{{ section.settings.text_4 }}</span>
        <img src="{{ 'Star_text_carrousel.svg' | asset_url }}" width="" height="" alt="Star" class="separator-image">
        <span class="carousel-item">{{ section.settings.text_1 }}</span>
        <img src="{{ 'Star_text_carrousel.svg' | asset_url }}" width="" height="" alt="Star" class="separator-image">
        <span class="carousel-item">{{ section.settings.text_2 }}</span>
        <img src="{{ 'Star_text_carrousel.svg' | asset_url }}" width="" height="" alt="Star" class="separator-image">
        <span class="carousel-item">{{ section.settings.text_3 }}</span>
        <img src="{{ 'Star_text_carrousel.svg' | asset_url }}" width="" height="" alt="Star" class="separator-image">
        <span class="carousel-item">{{ section.settings.text_4 }}</span>
        <img src="{{ 'Star_text_carrousel.svg' | asset_url }}" width="" height="" alt="Star" class="separator-image">
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .text-carousel-section {
    background-color: black;
    overflow: hidden;
    height: 60px;
    display: flex;
    align-items: center;
    width: 100%;
  }

  .carousel-wrapper {
    width: 100%;
    overflow: hidden;
  }

  .text-carousel {
    display: flex;
    align-items: center;
    gap: 32px;
    white-space: nowrap;
    animation: scrollText 20s linear infinite;
  }

  .carousel-item {
    color: white;
    font-size: 18px;
    font-weight: bold;
    display: flex;
    align-items: center;
  }

  .separator-image {
    height: 20px;
    width: auto;
    margin: 0 16px;
    display: inline-block;
  }

  @keyframes scrollText {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-33.33%);
    }
  }
</style>
