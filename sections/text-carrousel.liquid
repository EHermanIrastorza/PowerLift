{% schema %}
{
  "name": "Text Carousel Section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "label": "Text 1",
      "id": "text_1",
      "default": "First Recommendation"
    },
    {
      "type": "text",
      "label": "Text 2",
      "id": "text_2",
      "default": "Second Recommendation"
    },
    {
      "type": "text",
      "label": "Text 3",
      "id": "text_3",
      "default": "Third Recommendation"
    },
    {
      "type": "text",
      "label": "Text 4",
      "id": "text_4",
      "default": "Fourth Recommendation"
    },
    {
      "type": "image_picker",
      "id": "separator_image",
      "label": "Separator Image"
    }
  ],
  "presets": [
    {
      "name": "text carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="text-carousel-section">
  <div class="text-carousel">
    <span>{{ section.settings.text_1 }}</span>
    {% if section.settings.separator_image %}
      <img src="{{ section.settings.separator_image | img_url: 'small' }}" height="" width="" alt="Separator" class="separator-image">
    {% endif %}
    <span>{{ section.settings.text_2 }}</span>
    {% if section.settings.separator_image %}
      <img src="{{ section.settings.separator_image | img_url: 'small' }}" height="" width="" alt="Separator" class="separator-image">
    {% endif %}
    <span>{{ section.settings.text_3 }}</span>
    {% if section.settings.separator_image %}
      <img src="{{ section.settings.separator_image | img_url: 'small' }}" height="" width="" alt="Separator" class="separator-image">
    {% endif %}
    <span>{{ section.settings.text_4 }}</span>
    <!-- Duplicating content for infinite scrolling -->
    {% if section.settings.separator_image %}
      <img src="{{ section.settings.separator_image | img_url: 'small' }}" height="" width="" alt="Separator" class="separator-image">
    {% endif %}
    <span>{{ section.settings.text_1 }}</span>
    {% if section.settings.separator_image %}
      <img src="{{ section.settings.separator_image | img_url: 'small' }}" height="" width="" alt="Separator" class="separator-image">
    {% endif %}
    <span>{{ section.settings.text_2 }}</span>
    {% if section.settings.separator_image %}
      <img src="{{ section.settings.separator_image | img_url: 'small' }}" height="" width="" alt="Separator" class="separator-image">
    {% endif %}
    <span>{{ section.settings.text_3 }}</span>
    {% if section.settings.separator_image %}
      <img src="{{ section.settings.separator_image | img_url: 'small' }}" height="" width=""  alt="Separator" class="separator-image">
    {% endif %}
    <span>{{ section.settings.text_4 }}</span>
  </div>
</section>

<style>
  .text-carousel-section {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 50px; /* Fixed height */
    background-color: black; /* Background black */
    display: flex;
    align-items: center; /* Center text vertically */
  }

  .text-carousel {
    display: flex;
    gap: 16px; /* Space between text items */
    white-space: nowrap;
    color: white; /* White text */
    font-size: 16px;
    font-weight: bold;
    width: 100%; /* Occupies full width */
    justify-content: space-between; /* Ensures text spans across the whole width */
    animation: scrollText 10s linear infinite;
  }

  .separator-image {
    height: 20px; /* Adjust as needed */
    width: auto;
    vertical-align: middle;
  }

  @keyframes scrollText {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>
