{% schema %}
{
  "name": "Recommendations Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Recommendation Image",
      "settings": [
        {
          "type": "image_picker",
          "label": "Upload Image",
          "id": "image_upload"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Recommendations section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="recommendations-section">
  <div class="recomendations-text-container">
    <div class="text-container">
      <p class="recommendations-text">#1 Doctor Recommended</p>
    </div>
    <div class="reviews-info">
      {% for i in (1..5) %}
        <img src="{{ 'star-golden.svg' | asset_url }}" alt="Star {{ i }}" width="" height="" class="star-rating" />
      {% endfor %}
      <p class="reviews-text">4.8/5 (1,200 reviews)</p>
    </div>
  </div>

  <!-- Divider -->
  <hr class="vertical-divider" />

  <!-- Image Block Section -->
  <div class="image-block-section">
    {% for block in section.blocks %}
      {% if block.settings.image_upload %}
        <div class="image-container">
          <img src="{{ block.settings.image_upload | img_url: 'medium' }}" width="" height="" alt="Recommendation Image" class="recommendation-image" />
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
  .recommendations-section {
    background-color: rgba(246, 246, 245, 1);
    height: 120px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding-left: 30px;
  }

  .recomendations-text-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .text-container {
    width: 198px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border-radius: 8px;
    padding: 14px;
    background: rgba(0, 0, 0, 0.1);
    margin-right: 20px;
    border: 1px solid transparent;
  }

  .recommendations-text {
    color: black;
    font-size: 14px;
    margin: 0;
  }

  .reviews-info {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 284px;
    height: 20px;
    margin-top: 8px;
  }

  .star-rating {
    height: 16px;
    width: auto;
  }

  .reviews-text {
    font-size: 14px;
    color: black;
    margin: 0;
  }

  .vertical-divider {
    border: none;
    border-left: 2px solid rgba(27, 31, 35, 0.1);
    height: 50px;
    margin-left: 20px;
  }

  .image-block-section {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
    flex-grow: 1;
  }

  .image-container {
    width: 120px;
    height: 40px;
    border-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
    overflow: hidden;
  }

  .recommendation-image {
    width: 70.42px;
    height: 15.52px;
  }

  /* Responsive: hide blocks and hr on small screens */
  @media only screen and (max-width: 768px) {
    .vertical-divider,
    .image-block-section {
      display: none;
    }

    .recommendations-section {
      flex-direction: column;
      height: auto;
      padding: 20px 10px;
    }

    .recomendations-text-container {
      gap: 6px;
    }
  }
</style>
