<section class="custom-navbar">
    <div class="navbar-container">
      <!-- Logo -->
      <div class="navbar-logo">
        <a href="{{ shop.url }}">
          {% if settings.logo != blank %}
            <img src="{{ settings.logo | image_url }}" width="" height="" alt="{{ shop.name }}" class="navbar-logo-img" />
          {% endif %}
        </a>
      </div>
  
      <!-- Search Icon -->
      <div class="navbar-search">
        <svg id="search-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35m2.85-5.65a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <input type="text" id="search-bar" class="hidden" placeholder="Search...">
      </div>
    </div>
</section>
  
<style>
  .custom-navbar {
    position: absolute;
    top: 20px;
    left: 40px;
    border-radius: 8px;
    padding: 20px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: white;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .navbar-logo-img {
    max-height: 40px;
    border-radius: 8px;
  }
  
  .navbar-search {
    display: flex;
    align-items: center;
  }
  
  #search-bar {
    display: none;
    margin-left: 10px;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
</style>
  
<script>
  document.getElementById("search-icon").addEventListener("click", function() {
    let searchBar = document.getElementById("search-bar");
    if (searchBar.style.display === "none" || searchBar.style.display === "") {
      searchBar.style.display = "block";
    } else {
      searchBar.style.display = "none";
    }
  });
</script>
  
{% schema %}
{
  "name": "Custom Navbar",
  "class": "header",
  "disabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "presets": [
    {
      "name": "Custom Navbar",
      "category": "Header"
    }
  ]
}
{% endschema %}
