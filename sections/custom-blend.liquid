{% schema %}
{
  "name": "Customize your product",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "subtitle_text",
      "label": "Subtitle Text",
      "default": "Simple & Effective Ingredients"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" }
      ],
      "default": "h1"
    },
    {
      "type": "text",
      "id": "title_text",
      "label": "Title Text",
      "default": "Customized Protein Powder"
    },
    {
      "type": "product",
      "id": "selected_product",
      "label": "Select Product"
    },
    {
      "type": "select",
      "id": "right_title_tag",
      "label": "Right Title Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" }
      ],
      "default": "h2"
    },
    {
      "type": "text",
      "id": "right_title_text",
      "label": "Right Title Text",
      "default": "Your Custom Blend"
    },
    {
      "type": "checkbox",
      "id": "right_title_bold",
      "label": "Bold Title",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "top_label",
      "name": "Top Label",
      "limit": 3,
      "settings": [
        {
          "type": "select",
          "id": "label_text",
          "label": "Label Text",
          "options": [
            { "value": "Whey Based", "label": "Whey Based" },
            { "value": "Build Muscle", "label": "Build Muscle" },
            { "value": "Clean Ingredients", "label": "Clean Ingredients" }
          ],
          "default": "Whey Based"
        },
        {
          "type": "image_picker",
          "id": "label_logo",
          "label": "Label Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Customizer",
      "category": "Product"
    }
  ]
}
{% endschema %}

<style>
  .customize-product-section {
    background: rgba(246, 246, 245, 1);
    padding: 40px 0;
  }

  .customize-product-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .customize-product-heading {
    text-align: center;
    margin-bottom: 40px;
  }

  .customize-product-card {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .customize-product-image {
    width: 590px;
    height: 548px;
    background: rgba(255, 255, 255, 1);
    border: 1px solid #e0e0e0;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .customize-product-image img {
    width: 356px;
    height: 356px;
    object-fit: cover;
    border-radius: 8px;
  }

  .placeholder-box {
    width: 590px;
    height: 548px;
    background: rgba(255, 255, 255, 1);
    border: 1px dashed #ccc;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
    font-style: italic;
    color: #888;
    text-align: center;
  }

  .customize-product-right {
    width: 770px;
    height: 548px;
    background: rgba(255, 255, 255, 1);
    border: 1px solid #e0e0e0;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .right-content-wrapper {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
  }

  .right-top {
    height: 182px;
    background: rgba(27, 31, 35, 1);
    color: white;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .right-top-title {
    margin: 0;
    font-size: 24px;
  }

  .right-top-title.bold {
    font-weight: bold;
  }

  .top-labels {
    display: flex;
    gap: 12px;
    margin-top: 16px;
    flex-wrap: wrap;
  }

  .top-label-item {
    display: flex;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.1);
    padding: 6px 10px;
    border-radius: 6px;
  }

  .top-label-logo {
    width: 20px;
    height: 20px;
    object-fit: contain;
    margin-right: 6px;
  }

  .top-label-text {
    color: white;
    font-size: 14px;
    margin: 0;
  }

  .right-bottom {
    flex: 1;
    padding: 20px;
  }
</style>

<section class="customize-product-section">
  <div class="customize-product-container">
    <div class="customize-product-heading">
      <p>{{ section.settings.subtitle_text }}</p>
      <{{ section.settings.title_tag }}>{{ section.settings.title_text }}</{{ section.settings.title_tag }}>
    </div>

    <div class="customize-product-card">
      <!-- Left: Product Image -->
      <div class="customize-product-image">
        {% assign product = all_products[section.settings.selected_product] %}
        {% if product != blank and product.featured_image %}
          <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}">
        {% else %}
          <div class="placeholder-box">Please select a product in the theme editor</div>
        {% endif %}
      </div>

      <!-- Right: Custom Content Area -->
      <div class="customize-product-right">
        <div class="right-content-wrapper">
          <!-- Top part -->
          <div class="right-top">
            <{{ section.settings.right_title_tag }} class="right-top-title{% if section.settings.right_title_bold %} bold{% endif %}">
              {{ section.settings.right_title_text }}
            </{{ section.settings.right_title_tag }}>

            <!-- Render Blocks -->
            <div class="top-labels">
              {% for block in section.blocks %}
                {% if block.type == 'top_label' %}
                  <div class="top-label-item">
                    {% if block.settings.label_logo %}
                      <img src="{{ block.settings.label_logo | image_url: width: 32 }}" height="" width="" alt="{{ block.settings.label_text }}" class="top-label-logo">
                    {% endif %}
                    <p class="top-label-text">{{ block.settings.label_text }}</p>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>

          <!-- Bottom part -->
          <div class="right-bottom">
            <p>This is the bottom content. Weâ€™ll build it next ðŸ”§</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
