{% schema %}
{
  "name": "Customize your product",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "subtitle_text",
      "label": "Subtitle Text",
      "default": "Simple & Effective Ingredients"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" }
      ],
      "default": "h1"
    },
    {
      "type": "text",
      "id": "title_text",
      "label": "Title Text",
      "default": "Customized Protein Powder"
    },
    {
      "type": "product",
      "id": "selected_product",
      "label": "Select Product"
    },
    {
      "type": "select",
      "id": "right_title_tag",
      "label": "Right Title Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" }
      ],
      "default": "h2"
    },
    {
      "type": "text",
      "id": "right_title_text",
      "label": "Right Title Text",
      "default": "Your Custom Blend"
    },
    {
      "type": "checkbox",
      "id": "right_title_bold",
      "label": "Bold Title",
      "default": true
    },
    {
      "type": "text",
      "id": "bottom_title",
      "label": "Bottom Section Title",
      "default": "Customize Details"
    }
  ],
  "blocks": [
    {
      "type": "top_label",
      "name": "Top Label",
      "limit": 3,
      "settings": [
        {
          "type": "select",
          "id": "label_text",
          "label": "Label Text",
          "options": [
            { "value": "Whey Based", "label": "Whey Based" },
            { "value": "Build Muscle", "label": "Build Muscle" },
            { "value": "Clean Ingredients", "label": "Clean Ingredients" }
          ],
          "default": "Whey Based"
        },
        {
          "type": "image_picker",
          "id": "label_logo",
          "label": "Label Logo"
        }
      ]
    },
    {
      "type": "bottom_column",
      "name": "Bottom Column",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "column_logo",
          "label": "Logo"
        },
        {
          "type": "text",
          "id": "column_title",
          "label": "Title",
          "default": "Column Title"
        },
        {
          "type": "text",
          "id": "column_subtitle",
          "label": "Subtitle",
          "default": "Column subtitle goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Customizer",
      "category": "Product"
    }
  ]
}
{% endschema %}

<style>
  .customize-product-section {
    background: rgba(246, 246, 245, 1);
    padding: 40px 0;
  }

  .customize-product-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .customize-product-heading {
    text-align: center;
    margin-bottom: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .customize-product-card {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .customize-product-image {
    width: 590px;
    height: 548px;
    background: #fff;
    border: 1px solid #e0e0e0;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    transition: width 0.3s ease;
  }

  .customize-product-image img {
    width: 100%;
    height: auto;
    max-width: 356px;
    max-height: 356px;
    object-fit: cover;
    border-radius: 8px;
  }

  .placeholder-box {
    width: 100%;
    height: 100%;
    background: #fff;
    border: 1px dashed #ccc;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
    font-style: italic;
    color: #888;
    text-align: center;
    padding: 10px;
  }

  .customize-product-right {
    width: 770px;
    height: 548px;
    background: #fff;
    border: 1px solid #e0e0e0;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
  }

  .right-content-wrapper {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
  }

  .right-top {
    height: 182px;
    background: #1b1f23;
    border-top-right-radius: 8px;
    color: white;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .right-top-title {
    margin: 0;
    font-size: 24px;
    color: white;
  }

  .right-top-title.bold {
    font-weight: bold;
  }

  .top-labels {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 12px;
    margin-top: 16px;
    flex-wrap: wrap;
  }

  .top-label-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 6px 10px;
  }

  .top-label-logo {
    width: 32px;
    height: 32px;
    object-fit: contain;
  }

  .top-label-text {
    color: white;
    font-size: 18px;
    margin: 0;
  }

  .right-bottom {
    flex: 1;
    padding: 20px;
  }

  .bottom-title {
    font-size: 22px;
    margin-bottom: 20px;
  }

  .bottom-columns {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .bottom-column {
    flex: 1;
    min-width: 180px;
    max-width: 220px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .bottom-column-logo {
    width: 40px;
    height: 40px;
    object-fit: contain;
    margin-bottom: 10px;
  }

  .bottom-column-title {
    font-size: 16px;
    font-weight: bold;
    margin: 5px 0;
  }

  .bottom-column-subtitle {
    font-size: 14px;
    color: #555;
    margin: 0;
  }

  .customize-blend-button {
    width: 680px;
    height: 50px;
    border-radius: 8px;
    gap: 10px;
    padding: 10px;
    background: #1b1f23;
    color: white;
    font-size: 16px;
    font-weight: bold;
    border: none;
    cursor: pointer;
    display: block;
    margin: 0 auto;
  }

  /* === Responsive === */
  @media screen and (max-width: 1024px) {
    .customize-product-image {
      width: 75%;
      height: auto;
    }

    .customize-product-right {
      width: 100%;
    }
  }

  @media screen and (max-width: 768px) {
    .customize-product-card {
      flex-direction: column;
    }

    .customize-product-image {
      width: 50%;
      max-width: 300px;
    }

    .customize-product-right {
      display: none;
    }
  }
</style>

<section class="customize-product-section">
  <div class="customize-product-container">
    <div class="customize-product-heading">
      <p>{{ section.settings.subtitle_text }}</p>
      <{{ section.settings.title_tag }}>{{ section.settings.title_text }}</{{ section.settings.title_tag }}>
    </div>

    <div class="customize-product-card">
      <div class="customize-product-image">
        {% assign product = all_products[section.settings.selected_product] %}
        {% if product != blank and product.featured_image %}
          <img src="{{ product.featured_image | img_url: 'master' }}" width="" height="" alt="{{ product.title }}">
        {% else %}
          <div class="placeholder-box">Please select a product in the theme editor</div>
        {% endif %}
      </div>

      <div class="customize-product-right">
        <div class="right-content-wrapper">
          <div class="right-top">
            <{{ section.settings.right_title_tag }} class="right-top-title{% if section.settings.right_title_bold %} bold{% endif %}">
              {{ section.settings.right_title_text }}
            </{{ section.settings.right_title_tag }}>

            <div class="top-labels">
              {% for block in section.blocks %}
                {% if block.type == 'top_label' %}
                  <div class="top-label-item">
                    {% if block.settings.label_logo %}
                      <img src="{{ block.settings.label_logo | image_url: width: 32 }}" width="" height="" alt="{{ block.settings.label_text }}" class="top-label-logo">
                    {% endif %}
                    <p class="top-label-text">{{ block.settings.label_text }}</p>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>

          <div class="right-bottom">
            <h4 class="bottom-title">{{ section.settings.bottom_title }}</h4>
            <div class="bottom-columns">
              {% for block in section.blocks %}
                {% if block.type == 'bottom_column' %}
                  <div class="bottom-column">
                    {% if block.settings.column_logo %}
                      <img src="{{ block.settings.column_logo | image_url: width: 40 }}" width="" height="" alt="Logo" class="bottom-column-logo">
                    {% endif %}
                    <h5 class="bottom-column-title">{{ block.settings.column_title }}</h5>
                    <p class="bottom-column-subtitle">{{ block.settings.column_subtitle }}</p>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            <button class="customize-blend-button">Customize This Blend</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
