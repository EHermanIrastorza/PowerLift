{% schema %}
{
  "name": "Imagen blog",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "range",
      "id": "block_border_radius",
      "label": "Border radius de los bloques",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 8
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Subir imagen"
        }
      ]
    },
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_logo_left",
          "label": "Logo izquierdo del banner"
        },
        {
          "type": "image_picker",
          "id": "banner_logo_right",
          "label": "Logo derecho del banner"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Texto del bot√≥n",
          "default": "Follow Us on Instagram"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Imagen blog",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .imagen-blog-wrapper {
    width: 100vw;
    overflow-x: auto;
  }

  .imagen-blog {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(2, auto);
    gap: 15px;
    width: max-content;
    margin: 0 auto;
  }

  .imagen-blog img {
    width: 245px;
    height: 245px;
    object-fit: cover;
    border-radius: var(--imagen-blog-border-radius, 8px);
  }

  .imagen-blog .banner {
    grid-column: span 2;
    width: 500px;
    height: 245px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #f3f3f3;
    text-align: center;
    padding: 20px;
    border-radius: var(--imagen-blog-border-radius, 8px);
    z-index: 2;
  }

  .imagen-blog .banner-logos {
    display: flex;
    gap: 6px;
    align-items: center;
    margin-bottom: 10px;
  }

  .imagen-blog .banner-logo-left {
    width: 60px;
    height: 60px;
    object-fit: contain;
  }

  .imagen-blog .banner-logo-right {
    width: 148px;
    height: 24px;
    object-fit: contain;
  }

  .imagen-blog .banner button {
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    border: none;
    cursor: pointer;
  }

  /* ===== MEDIA QUERY ===== */
  @media screen and (max-width: 768px) {
    .imagen-blog {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      min-height: 300px;
      padding: 20px;
    }

    .imagen-blog a {
      display: none !important;
    }

    .imagen-blog img:not(.banner-logo-left):not(.banner-logo-right) {
      display: none !important;
    }

    .imagen-blog .banner {
      width: 90%;
      max-width: 500px;
      height: auto;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const borderRadius = {{ section.settings.block_border_radius | default: 8 }};
    document.documentElement.style.setProperty('--imagen-blog-border-radius', borderRadius + 'px');
  });
</script>

<div class="imagen-blog-wrapper">
  <div class="imagen-blog">
    {% for block in section.blocks %}
      {% if block.type == "banner" %}
        <div class="banner">
          <div class="banner-logos">
            {% if block.settings.banner_logo_left %}
              <img
                src="{{ block.settings.banner_logo_left | img_url: '60x60' }}" width="" height=""
                alt="Logo izquierdo"
                class="banner-logo-left"
              >
            {% endif %}
            {% if block.settings.banner_logo_right %}
              <img
                src="{{ block.settings.banner_logo_right | img_url: '148x24' }}" width="" height=""
                alt="Logo derecho"
                class="banner-logo-right"
              >
            {% endif %}
          </div>
          <button>{{ block.settings.button_text }}</button>
        </div>
      {% elsif block.settings.image %}
        <a href="#">
          <img
            src="{{ block.settings.image | img_url: '245x245' }}" width="" height=""
            alt="Imagen del blog"
            style="border-radius: {{ section.settings.block_border_radius | default: 8 }}px;"
          >
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>
